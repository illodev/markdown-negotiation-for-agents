{
  "name": "illodev/markdown-negotiation-for-agents",
  "description": "Content negotiation plugin for WordPress that serves Markdown to AI agents and tools via Accept header.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "wordpress-plugin",
    "markdown",
    "content-negotiation",
    "ai",
    "llm",
    "rest-api"
  ],
  "homepage": "https://github.com/illodev/markdown-negotiation-for-agents",
  "authors": [
    {
      "name": "illodev",
      "email": "hello@illodev.com",
      "homepage": "https://github.com/illodev",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/illodev/markdown-negotiation-for-agents/issues",
    "source": "https://github.com/illodev/markdown-negotiation-for-agents",
    "docs": "https://github.com/illodev/markdown-negotiation-for-agents#readme"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=8.1",
    "league/html-to-markdown": "^5.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "wp-coding-standards/wpcs": "^3.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "yoast/phpunit-polyfills": "^2.0",
    "mockery/mockery": "^1.6",
    "brain/monkey": "^2.6"
  },
  "autoload": {
    "psr-4": {
      "IlloDev\\MarkdownNegotiation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IlloDev\\MarkdownNegotiation\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=unit",
    "test:integration": "phpunit --testsuite=integration",
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "lint": "@phpcs"
  }
}
