<?xml version="1.0"?>
<ruleset name="Markdown Negotiation for Agents">
	<description>Coding standards for the Markdown Negotiation for Agents plugin.</description>

	<!-- What to scan. -->
	<file>src</file>
	<file>markdown-negotiation-for-agents.php</file>
	<file>uninstall.php</file>

	<!-- Excludes -->
	<exclude-pattern>vendor/*</exclude-pattern>
	<exclude-pattern>node_modules/*</exclude-pattern>
	<exclude-pattern>tests/*</exclude-pattern>

	<!-- Use WordPress Coding Standards. -->
	<rule ref="WordPress">
		<!-- Allow short array syntax. -->
		<exclude name="Generic.Arrays.DisallowShortArraySyntax" />
		<!-- Allow PSR-4 file naming. -->
		<exclude name="WordPress.Files.FileName.InvalidClassFileName" />
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase" />
	</rule>

	<!-- Use WordPress Extra for additional checks. -->
	<rule ref="WordPress-Extra" />

	<!-- Check for compatibility with PHP 8.1+. -->
	<config name="testVersion" value="8.1-" />

	<!-- Text domain for i18n checks. -->
	<config name="text_domain" value="markdown-negotiation-for-agents" />

	<!-- Minimum WordPress version. -->
	<config name="minimum_wp_version" value="6.0" />

	<!-- Prefixes for naming conventions. -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="jetstaa_mna" />
				<element value="IlloDev\MarkdownNegotiation" />
			</property>
		</properties>
	</rule>

	<!-- Allow modern PHP features. -->
	<rule ref="WordPress.PHP.DisallowShortTernary">
		<severity>0</severity>
	</rule>

	<!-- Show progress. -->
	<arg value="ps" />
	<arg name="colors" />
	<arg name="extensions" value="php" />
</ruleset>
